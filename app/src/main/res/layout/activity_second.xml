<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/background_activitysecond">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="12dp"
        android:id="@+id/cardView_secondActivity"
        app:cardCornerRadius="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/yasGir"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/cardView_secondActivity"
        android:layout_marginTop="20dp"
        android:background="@drawable/textviews"
        android:textSize="12dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yasGir"
        android:id="@+id/secondrellay">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/phoneButton"
        android:background="@drawable/ic_stat_name"
        android:textAlignment="center"
        android:textSize="12dp"
        android:paddingTop="85dp"
        android:layout_marginTop="20dp">
    </Button>

    <Button
        android:id="@+id/mailButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_stat_name1"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/phoneButton"
        android:textAlignment="center"
        android:textSize="12dp"
        android:paddingTop="85dp"
        android:layout_marginTop="20dp">
    </Button>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="  Derslerim  "
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_below="@id/secondrellay"
        android:id="@+id/butonDerslerim"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
    </ScrollView>