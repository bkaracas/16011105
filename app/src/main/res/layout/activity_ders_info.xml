<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activitymain">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ders_adi"
            android:layout_toRightOf="@id/ders_adi1"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Dersin Adı"
            android:id="@+id/ders_adi1"
            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:id="@+id/ogrenci_sayisi"
            android:layout_below="@id/ders_adi"
            android:layout_toRightOf="@id/ogrenci_sayisi1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/ogrenci_sayisi1"
            android:text="Öğrenci Sayısı"
            android:layout_below="@id/ders_adi1"
            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/not_ortalama"
            android:layout_below="@id/ogrenci_sayisi"
            android:layout_toRightOf="@id/not_ortalama1"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/not_ortalama1"
            android:layout_below="@id/ogrenci_sayisi"
            android:text="Not Ortalaması:"
            />


    </RelativeLayout>

</RelativeLayout>